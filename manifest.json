{
  "manifest_version": 2,

  "name": "Chrome Mom",
  "description": "This extension will monitor your internet usage",
  "version": "1.0",
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "backgroud" : {
    "scripts": ["background.js"]
  },
  "content_scripts" : [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["jquery.min.js"]
  }],
  "permissions": [
   "activeTab",
   "browsingData",
   "alarms",
   "background",
   "contentSettings",
   "history",
   "idle",
   "power",
   "storage",
   "notifications",
   "topSites",
   "wallpaper",
   "webRequest",
   "webRequestBlocking",
   "tabs"
   ]
}
